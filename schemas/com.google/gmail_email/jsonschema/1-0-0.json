{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Gmail Email Message",
  "description": "Gmail API message format (simplified)",
  "type": "object",
  "required": ["id", "threadId", "internalDate", "payload"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Gmail message ID"
    },
    "threadId": {
      "type": "string",
      "description": "Gmail thread ID"
    },
    "internalDate": {
      "type": "string",
      "description": "Message timestamp in milliseconds (as string)"
    },
    "payload": {
      "type": "object",
      "required": ["headers"],
      "properties": {
        "headers": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "value"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Header name (e.g., From, To, Subject)"
              },
              "value": {
                "type": "string",
                "description": "Header value"
              }
            }
          },
          "description": "Email headers"
        },
        "body": {
          "type": "object",
          "properties": {
            "data": {
              "type": "string",
              "description": "Base64-encoded message body"
            }
          }
        }
      }
    }
  }
}
